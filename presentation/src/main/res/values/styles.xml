<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="DetailsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#64bfbfbf</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextStyle.Heading">
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>


    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">19sp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>-->
    </style>

    <style name="TextStyle.Heading.Bold" parent="TextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>-->
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">17sp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>-->
    </style>

    <style name="TextStyle.Title.Bold" parent="TextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>-->
    </style>


    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>-->
    </style>

    <style name="TextStyle.Comment.Small" parent="TextStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextStyle.Comment.Bold" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyRatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabTextAppearance">@style/MyTabTextAppearance</item>-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="GalleryTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/explode</item>
        <item name="android:windowExitAnimation">@anim/collapse</item>
    </style>

    <style name="StepView">
        <item name="sv_animationDuration">500</item>
        <item name="sv_animationType">All</item>
        <item name="sv_doneCircleColor">@color/stepview_circle_done</item>
        <item name="sv_doneCircleRadius">20dp</item>
        <item name="sv_doneStepLineColor">@color/stepview_line_done</item>
        <item name="sv_doneStepMarkColor">@color/stepview_mark</item>
        <item name="sv_doneTextColor">@color/stepview_text_done</item>
        <item name="sv_nextStepLineColor">@color/stepview_line_next</item>
        <item name="sv_nextTextColor">@color/stepview_text_next</item>
        <item name="sv_selectedCircleColor">@color/stepview_line_next</item>
        <item name="sv_selectedCircleRadius">20dp</item>
        <item name="sv_selectedStepNumberColor">@color/stepview_selected_number</item>
        <item name="sv_selectedTextColor">@color/stepview_text_selected</item>
        <item name="sv_stepLineWidth">3dp</item>
        <item name="sv_stepNumberTextSize">16sp</item>
        <item name="sv_stepPadding">1dp</item>
        <item name="sv_textPadding">12dp</item>
        <item name="sv_textSize">14sp</item>
    </style>

    <style name="NonPointer" parent="@android:style/Theme.Holo.Light">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">19sp</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>-->
        <item name="android:textSelectHandleLeft">@drawable/transparent_pointer</item>
        <item name="android:textSelectHandleRight">@drawable/transparent_pointer</item>
        <item name="android:textSelectHandle">@drawable/transparent_pointer</item>
    </style>

    <style name="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
